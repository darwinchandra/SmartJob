<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/setting"
    tools:context=".SettingProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray2"
            app:title="Settings"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="@style/TextAppearance.App.Subtitle1"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:navigationIconTint="@color/black"
            style="@style/Widget.App.Toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Chat Settings"
        android:textColor="@color/gray4"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/basic_regular"/>


    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icons8_notification_24"
        android:text="Turn on Notifications"
        android:textAlignment="textStart"
        style="@style/Widget.App.Button"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:textSize="16dp"
        android:layout_gravity="start" />

    <Button
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/icons8_edit_chat_history_24"
        android:drawableRight="@android:drawable/ic_menu_delete"
        android:clickable="true"
        android:text="Clear Chat History"
        android:drawablePadding="10dp"
        style="@style/Widget.App.Button"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:textSize="16dp"
        android:layout_gravity="start"
        android:foreground="?selectableItemBackground"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Security and Privacy Settings"
        android:textColor="@color/gray4"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/basic_regular"
        />


    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icons8_key_30"
        android:gravity="start|center_vertical"
        style="@style/Widget.App.Button"
        android:text="Change Password"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"

        android:foreground="?selectableItemBackground"/>
</LinearLayout>