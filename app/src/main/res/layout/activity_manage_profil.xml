<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageProfilActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar_ManageProfil"
            style="@style/Widget.App.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray2"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:navigationIconTint="@color/black"
            app:subtitleTextColor="@color/black"
            app:title="Manage Profil"
            app:titleTextAppearance="@style/TextAppearance.App.Subtitle1"
            app:titleTextColor="@color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/profile" />

                <ImageButton
                    android:id="@+id/imagePencil3"
                    android:layout_width="31dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:onClick="getCustomDialog"
                    android:src="@drawable/pencil" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/basic_regular"
                android:text="Darwin Chandra"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="64dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/basic_regular"
                android:text="admin"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/basic_regular"
                android:text="yourname12312@gmail.com"
                android:textColor="#B3000000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/basic_regular"
                android:text="085273847765"
                android:textColor="#B3000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordert"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imageBag"
                    android:layout_width="45dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="55dp"
                    android:background="@color/gray2"
                    android:src="@drawable/bag" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="115dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/imageBag"
                    android:fontFamily="@font/basic_regular"
                    android:text="Work Experience"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="28dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/basic_regular"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="223dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/basic_regular"
                    android:text="I have been workin since july 2018"
                    android:textColor="#B3000000" />

                <ImageButton
                    android:id="@+id/imagePencil2"
                    android:layout_width="31dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/pencil" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/basic_regular"
                android:text="Admin"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="112dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="13dp"
                    android:fontFamily="@font/basic_regular"
                    android:text="pt_lamtamas    jan 2018-present"
                    android:textColor="#B3000000" />

                <ImageButton
                    android:id="@+id/imagePencil4"
                    android:layout_width="32dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@id/imageSampah"
                    android:background="@color/white"
                    android:src="@drawable/pencil" />

                <ImageButton
                    android:id="@+id/imageSampah"
                    android:layout_width="32dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/trash" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordert"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="43dp"
                    android:layout_height="31dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/gray2"
                    android:src="@drawable/hat" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="75dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/imageView8"
                    android:fontFamily="@font/basic_regular"
                    android:text="Education"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/basic_regular"
                    android:text="Mikroskil"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imagePencil1"
                    android:layout_width="37dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/pencil" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/basic_regular"
                android:text="2021" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="158dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/basic_regular"
                android:text="Bachelor's Degree in Computer Science / Information Technology"
                android:textColor="#B3000000" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordert"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="31dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/gray2"
                    android:src="@drawable/hat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="55dp"
                    android:fontFamily="@font/basic_regular"/>
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:text="Add"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:text="Application Letter &amp; CV"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/imagePencil5"
                    android:layout_width="31dp"
                    android:layout_height="36dp"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/pencil" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btnappletter"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/gray"
                    android:clickable="true"
                    android:drawableLeft="@drawable/word"
                    android:text="ApplicationLetter&amp;CV"
                    android:textColor="@color/blue"
                    android:gravity="left|center" />
                <ProgressBar
                    android:id="@+id/progressapp"
                    android:layout_below="@id/btnappletter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:max="100"
                    android:min="0"/>
            </RelativeLayout>


        </LinearLayout>

        
    </ScrollView>
</LinearLayout>