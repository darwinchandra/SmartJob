<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:id="@+id/card_News"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <ImageView
                android:id="@+id/img_News"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_img_news"
                android:src="@drawable/ipi"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/title_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:fontFamily="@font/basic_regular"
                android:textSize="15dp"
                android:layout_toRightOf="@id/img_News"
                android:layout_marginBottom="5dp"
                android:maxLength="80"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/desc_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT. Industri Pembungkus Internasional"
                android:fontFamily="@font/basic_regular"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>