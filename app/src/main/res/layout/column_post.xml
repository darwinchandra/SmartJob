<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">
        <LinearLayout
        android:id="@+id/card_recent_loker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/dark_blue">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_perusahaan_column"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_iconperusahaan"
                    android:src="@drawable/ipi"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/jabatan_pegawai_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabatan"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:fontFamily="@font/basic_regular"
                        android:layout_marginBottom="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_company_white"/>
                        <TextView
                            android:id="@+id/nama_perusahaan_col"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="PT. Industri Pembungkus Internasional"
                            android:fontFamily="@font/basic_regular"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_location_only_white"/>
                        <TextView
                            android:id="@+id/lokasi_perusahaan_col"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="Medan, Sumatera Utara"
                            android:fontFamily="@font/basic_regular"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/string_salary_col"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10jt/month"
                        android:textSize="12dp"
                        android:fontFamily="@font/basic_regular"
                        android:textColor="@color/white"
                        android:layout_gravity="right"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/bookmark_icon_column_post"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_bookmark"
                        android:layout_marginTop="-7dp"
                        android:layout_gravity="right"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_heart_empty"
                        android:layout_below="@+id/bookmark_icon_column_post"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>