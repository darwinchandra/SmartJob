<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="12dp">
    <RelativeLayout
        android:id="@+id/card_interview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/card_interview_top"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <ImageView
                    android:id="@+id/icon_perusahaan_interview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_iconperusahaan"
                    android:src="@drawable/ipi"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/jabatan_pegawai_interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Manager"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/basic_regular"
                    android:textSize="22dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line"/>
                <TextView
                    android:id="@+id/nama_perusahaan_interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PT. Industri Pembungkus Internasional"
                    android:fontFamily="@font/basic_regular"/>
                <TextView
                    android:id="@+id/loca_perusahaan_Interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medan, Sumatera Utara"
                    android:fontFamily="@font/basic_regular"/>
                <TextView
                    android:id="@+id/gaji_interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 jt / month"
                    android:fontFamily="@font/basic_regular"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_interview_bottom"
            android:layout_below="@+id/card_interview_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/time_interview"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:fontFamily="@font/basic_regular"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="20dp"
                android:text="Interview : 15-May-20  (10:30 AM)"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_join_interview"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:fontFamily="@font/basic_regular"
                android:text="Join"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>